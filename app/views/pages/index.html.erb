<h1>Harry Potter y Sus personajes</h1>
<p>Ubicacion casa de magia</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            <th scope="col">House</th>
        </tr>
    </thead>
    <tbody>
      <% @characters.each do |c| %>
        <tr>
            <th scope="row">
                <%= c.id%>
            </th>
            <td>
                <%= c.name%>
            </td>   
            <td>
                <%= c.location%>
            </td>
            <td>
                <%= c.house%>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>
